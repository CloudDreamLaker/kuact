{% endblock %}
{% block output_file %}
	{%- if io_style == 'uoj' -%}
		输出到标准输出。
	{%- elif io_style == 'noi' -%}
		输出到文件 *{{ prob['name'] }}.out* 中。
	{%- elif io_style == 'ccpc' -%}
	{%- endif -%}
{% endblock %}
{%- block user_path -%}
	{%- if io_style == 'uoj' -%}
		[下载目录](/download.php?type=problem&id={{ prob['uoj id'] }})
