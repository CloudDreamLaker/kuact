{% extends "problem.md.jinja" %}

{% block input_file %}
	{%- if io_style == 'stdio' -%}
		{{ 'Read from the standard input.' }}
	{%- elif io_style == 'fio' -%}
		{{ 'Read from the file *%s.in*.' % prob['name'] }}
	{%- endif -%}
{% endblock %}

{% block output_file %}
	{%- if io_style == 'stdio' -%}
		{{ 'Write to the standard output.' }}
	{%- elif io_style == 'fio' -%}
		{{ 'Write to the file *%s.out*.' % prob['name'] }}
	{%- endif -%}
{% endblock %}

{%- block user_path -%}
	{%- if comp == 'uoj' -%}
		[{{ 'download files' }}](/download.php?type=problem&id={{ prob['uoj id'] }})
	{%- elif comp == 'tsinsen-oj' -%}
		{{ 'download files' }}
	{%- elif comp == 'noi' -%}
		{{ 'user\'s home path' }}
	{%- else -%}
		{{ 'problem path' }}
	{%- endif -%}
{%- endblock -%}

