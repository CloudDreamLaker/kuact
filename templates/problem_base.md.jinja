{% extends "problem.md.jinja" %}
{% block input_file %}
	{%- if io_style == 'uoj' -%}
		从标准输入读入数据。
	{%- elif io_style == 'noi' -%}
		从文件 *{{ prob['name'] }}.in* 中读入数据。
